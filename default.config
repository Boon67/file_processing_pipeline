# ============================================
# Snowflake File Processing Pipeline Configuration
# ============================================
# This file contains default configuration values for deployment.
# You can customize these values or override them during deployment.
#
# Usage:
#   ./deploy.sh                    # Uses values from this file as defaults
#   ./deploy.sh custom.config      # Uses values from custom.config file
# ============================================

# Deployment Settings
# Set to "true" to accept all default values without prompting
ACCEPT_DEFAULTS="true"

# Set to "true" to use the default Snowflake CLI connection
# Set to "false" to prompt for connection selection when multiple exist
USE_DEFAULT_CLI_CONNECTION="true"

# Database Configuration
DATABASE_NAME="db_ingest_pipeline"
SCHEMA_NAME="BRONZE"
WAREHOUSE_NAME="COMPUTE_WH"

# Stage Configuration
SRC_STAGE_NAME="SRC"
COMPLETED_STAGE_NAME="COMPLETED"
ERROR_STAGE_NAME="ERROR"
ARCHIVE_STAGE_NAME="ARCHIVE"

# Task Configuration
DISCOVER_TASK_NAME="discover_files_task"
PROCESS_TASK_NAME="process_files_task"
MOVE_SUCCESS_TASK_NAME="move_successful_files_task"
MOVE_FAILED_TASK_NAME="move_failed_files_task"
ARCHIVE_TASK_NAME="archive_old_files_task"

# Task Schedule (in minutes)
DISCOVER_TASK_SCHEDULE_MINUTES="60"

# Streamlit App Configuration
# Note: Identifier names cannot contain spaces
STREAMLIT_APP_NAME="BRONZE_INGESTION_PIPELINE"

# ============================================
# SILVER LAYER CONFIGURATION
# ============================================

# Silver Schema Configuration
SILVER_SCHEMA_NAME="SILVER"
SILVER_STAGE_NAME="SILVER_STAGE"
SILVER_CONFIG_STAGE_NAME="SILVER_CONFIG"
SILVER_STREAMLIT_STAGE_NAME="SILVER_STREAMLIT"

# Silver Task Configuration
SILVER_TRANSFORM_SCHEDULE_MINUTES="15"

# Silver Streamlit App Configuration
SILVER_STREAMLIT_APP_NAME="SILVER_TRANSFORMATION_MANAGER"

# LLM Configuration
DEFAULT_LLM_MODEL="snowflake-arctic"

# Transformation Configuration
DEFAULT_BATCH_SIZE="10000"
APPLY_RULES_BY_DEFAULT="true"
INCREMENTAL_PROCESSING="true"

